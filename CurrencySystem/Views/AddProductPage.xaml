<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CurrencySystem.ViewModels"
             x:Class="CurrencySystem.Views.AddProductPage"
             x:DataType="viewmodels:AddProductViewModel"
             Title="AddProductPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid RowDefinitions="*,Auto" ColumnDefinitions="*,*,*" ColumnSpacing="5"
          Padding="10">
            <TableView Intent="Data" Grid.Row="0" Grid.ColumnSpan="3">
                <TableRoot>
                    <TableSection Title="Информация за продукта">
                        <EntryCell Label="Part ID" Text="{Binding Id}" IsEnabled="False" />
                        <EntryCell Label="Име" Text="{Binding Name}" />
                        <EntryCell Label="Количество" Text="{Binding Quantity}" />
                        <EntryCell Label="Цена" Text="{Binding Price}" />
                        
                    </TableSection>
                </TableRoot>
            </TableView>

            <Button Text="Save" Grid.Row="1" Grid.Column="0" Command="{Binding SaveDataCommand}" Margin="20,0"/>

        </Grid>
    </VerticalStackLayout>
</ContentPage>